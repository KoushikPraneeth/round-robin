# Server Configuration
PORT=5001
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@your-cluster.mongodb.net/dbname

# Authentication
JWT_SECRET=your_jwt_secret_key_min_32_chars
COOKIE_SECRET=your_cookie_signing_secret_min_32_chars # Secret key for cookie signing

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=strong_admin_password

# Rate Limiting
RATE_LIMIT_WINDOW=30    # minutes
RATE_LIMIT_MAX_CLAIMS=1 # claims per window

# Security Settings
CORS_ORIGIN=http://localhost:8080
TRUST_PROXY=1           # Enable if behind reverse proxy
ENABLE_HTTPS=false      # Set to true in production

# Note: In production:
# - Use strong, unique secrets for JWT_SECRET and COOKIE_SECRET
# - Enable HTTPS
# - Set secure admin credentials
# - Configure proper CORS_ORIGIN
# - Set TRUST_PROXY if behind load balancer
